<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:id="@+id/cardView"
    app:elevation="5dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/sectionFooterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/section_padding">

        <TextView
            android:id="@+id/sectionRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摘要"
            android:textColor="@color/text_font_black"
            android:textSize="@dimen/regular14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/section_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未处理今日报警2条:"
            android:textColor="@color/text_font_black"
            android:textSize="@dimen/regular14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sectionRemark" />

        <LinearLayout
            android:id="@+id/sectionOperateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/section_remark" >
            <Button
                android:id="@+id/sectionOperateLayoutButton"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/recycler_padding"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:padding="8dp"
                android:textColor="@color/bg_white"
                android:text="确定信息测试按钮"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>